<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Physio Rehab"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/txtEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SYSTEM SAFE"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posture Correction (MPU6050)"
                android:textSize="16sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/txtPostureValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0°"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtPostureStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Good"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Monitor (Flex Sensor)"
                android:textSize="16sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/txtJointValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0°"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target: 90°"
                android:gravity="center"
                android:textColor="#FF9800"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>