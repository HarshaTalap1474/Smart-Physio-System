<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Physio Rehab"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- System Status -->
        <TextView
            android:id="@+id/txtEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM SAFE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_status_safe"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Posture Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:forceDarkAllowed="false"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posture Correction"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#263238" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MPU6050 Sensor"
                    android:textSize="12sp"
                    android:textColor="#78909C"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtPostureValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtPostureStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good Posture"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Exercise Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:forceDarkAllowed="false"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise Monitor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#263238" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flex Sensor"
                    android:textSize="12sp"
                    android:textColor="#78909C"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtJointValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Target: 90°"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
